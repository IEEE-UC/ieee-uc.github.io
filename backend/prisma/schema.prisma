datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  role      String   @default("user") // roles can be 'user' or 'admin'
}

model ClubEvent {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  date        DateTime
  location    String
}

model Member {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  joinedAt  DateTime @default(now())
}